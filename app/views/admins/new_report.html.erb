<div class="container">
  <div class="row">
    <div class="col-12">
      <%= link_to 'Home', admin_path %> | <%= link_to 'All Reports', admin_reports_path %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-12">
      <%= form_for @report, url: admin_reports_new_path(@report), html: { method: :post } do |f| %>
        <p>
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </p>
    
        <p>
          <%= f.label :language %><br>
          <%= f.text_field :language %>
        </p> 

        <p>
          <%= f.label :file_url %><br>
          <%= f.text_field :file_url %>
        </p> 

        <p>
          <%= f.label :month %><br>
          <%= f.text_field :month %>
        </p> 
    
        <p>
          <%= f.label :order %><br>
          <%= f.select :order, options_for_select(0..Report.all.length,Report.all.length) %>
        </p> 

        <p>
          <%= f.label :report_attachments %><br>
          <%= f.file_field :report_attachments, multiple: true %>
        </p>

        <p>
          <%= f.submit :class => "btn btn-success" %>
        </p>
      <% end %>
    </div>
  </div>
</div>