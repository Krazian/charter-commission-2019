<div class="container">
  <div class="row">
    <div class="col-12">
      <%= link_to 'Home', admin_path %> | <%= link_to 'Back', admin_messages_path %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-12">
      <%= form_for @comment, url: edit_message_path(@comment), html: { method: :put } do |f| %>
        <p>
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </p>
    
        <p>
          <%= f.label :email %><br>
          <%= f.text_field :email %>
        </p> 
    
        <p>
          <%= f.label :message %><br>
          <%= f.text_area :message %>
        </p>

        <% if !@comment.comment_attachment.file.nil? %>
          <p>
            <%= f.label :comment_attachment %><br>
            <a href=<%= @comment.comment_attachment.url %>> <%= @comment.comment_attachment_identifier %> </a>
          </p>
        <% end %>
        
        <%= link_to 'Delete', destroy_message_path(@comment), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger full-width" %>
        <!--<p>
          <%#= f.submit %>
        </p>-->
      <% end %>
    </div>
  </div>
</div>