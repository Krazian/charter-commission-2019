<div class="container">
  <div class="row">
    <div class="col-12">
      <%= link_to 'Home', admin_path %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-12">
      <h2 style="text-decoration:underline;">All Job Opportunities</h2>
    </div>
  </div>
  <% @jobs.each do |job| %>
    <div class="row">
      <div class="col-12">
        <%= link_to job.position, edit_job_path(job.id) %>
      </div>
    </div>
  <% end %>
</div>