<div class="container">
  <div class="row">
    <div class="col-12">
      <%= link_to 'Home', admin_path %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-12">
      <h2 style="text-decoration:underline;">All News</h2>
    </div>
  </div>
  <% @all_news.each do |news| %>
    <div class="row">
      <div class="col-12">
        <%= link_to "#{news.title} - #{news.publication_date}", edit_news_path(news.id) %>
      </div>
    </div>
  <% end %>
</div>